{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "plugins": ["@nestjs/swagger/plugin"],
    "assets": ["../../libs/proto/*.proto"],
    "watchAssets": true,
    "tsConfigPath": "apps/gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/gateway",
  "projects": {
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "assets": ["../../libs/proto/*.proto"],
        "watchAssets": true,
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "files": {
      "type": "application",
      "root": "apps/files",
      "entryFile": "main",
      "sourceRoot": "apps/files/src",
      "compilerOptions": {
        "tsConfigPath": "apps/files/tsconfig.app.json"
      }
    },
    "profile": {
      "type": "application",
      "root": "apps/profile",
      "entryFile": "main",
      "sourceRoot": "apps/profile/src",
      "compilerOptions": {
        "assets": ["../../libs/proto/*.proto"],
        "watchAssets": true,
        "tsConfigPath": "apps/profile/tsconfig.app.json"
      }
    },
    "payments": {
      "type": "application",
      "root": "apps/payments",
      "entryFile": "main",
      "sourceRoot": "apps/payments/src",
      "compilerOptions": {
        "assets": ["../../libs/proto/payments.proto"],
        "watchAssets": true,
        "tsConfigPath": "apps/payments/tsconfig.app.json"
      }
    },
    "posts": {
      "type": "application",
      "root": "apps/posts",
      "entryFile": "main",
      "sourceRoot": "apps/posts/src",
      "compilerOptions": {
        "tsConfigPath": "apps/posts/tsconfig.app.json"
      }
    },
    "content": {
      "type": "application",
      "root": "apps/content",
      "entryFile": "main",
      "sourceRoot": "apps/content/src",
      "compilerOptions": {
        "tsConfigPath": "apps/content/tsconfig.app.json"
      }
    }
  }
}